{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GTD Flow",
  "version": "0.2.0",
  "identifier": "com.gtdflow.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GTD Flow",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "frameworks": [],
      "exceptionDomain": ""
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "android": {
      "minSdkVersion": 24
    },
    "externalBin": [],
    "copyright": "",
    "category": "Productivity",
    "shortDescription": "GTD task management",
    "longDescription": "Cross-platform GTD Flow: Inbox, Next Actions, projects, reminders (macOS, iOS, Android, Windows)."
  },
  "plugins": {
    "fs": {},
    "shell": {
      "open": true
    }
  }
}